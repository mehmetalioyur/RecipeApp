<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/rvCategoryNameTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/akaya_telivigala"
        android:textSize="18sp"
        android:layout_marginBottom="4dp"
        android:text="@string/recipe"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="@+id/rvCategoryImage"
        app:layout_constraintStart_toStartOf="@+id/rvCategoryImage"
        app:layout_constraintTop_toBottomOf="@+id/rvCategoryImage" />

    <ImageView
        android:id="@+id/rvCategoryImage"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.03"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_launcher_foreground"
        android:contentDescription="@string/category_image" />
</androidx.constraintlayout.widget.ConstraintLayout>